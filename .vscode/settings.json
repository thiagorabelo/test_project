// Place your settings in this file to overwrite default and user settings.
{
// [[ GLOBAL ]]

// Workbench

    // Controls if opened editors show as preview. Preview editors are reused until they are kept (e.g. via double click or editing).
    "workbench.editor.enablePreview": false,


// [[ PROJECT ]]

//Python

    "python.pythonPath": "${env:HOME}/.virtualenvs/test_project/bin/python",
    "python.linting.pylintPath": "${env:HOME}/.virtualenvs/test_project/bin/pylint",
    "python.linting.pylintArgs": ["--load-plugins=pylint_django"],
    "python.linting.pylintEnabled": true,

// List Files To Open configuration

// Configure glob patterns for excluding files and folders. For example, the files explorer decides which files and folders to show or hide based on this setting.
    "files.exclude": {
        "**/.git": false,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/.directory": true
    },

    "explorer.openEditors.visible": 0,
    "window.zoomLevel": -0.001
}
